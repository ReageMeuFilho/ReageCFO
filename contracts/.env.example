# ============================================
# Aperture Ledger - Environment Configuration
# ============================================

# IMPORTANT: Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ============================================
# Deployment Private Key
# ============================================
# Your deployer wallet private key (without 0x prefix)
# Get testnet ETH from: https://ethglobal.com/faucet/
PRIVATE_KEY=your_private_key_here

# ============================================
# RPC Endpoints
# ============================================
# Ethereum Sepolia RPC URL
# Free options:
# - https://eth-sepolia.g.alchemy.com/v2/YOUR_API_KEY
# - https://sepolia.infura.io/v3/YOUR_API_KEY
# - https://rpc.sepolia.org (public, may be slow)
RPC_URL_ETH_SEPOLIA=https://rpc.sepolia.org

# Base Sepolia RPC URL (for cross-chain testing)
RPC_URL_BASE_SEPOLIA=https://sepolia.base.org

# Arbitrum Sepolia RPC URL (alternative destination)
RPC_URL_ARB_SEPOLIA=https://sepolia-rollup.arbitrum.io/rpc

# ============================================
# Block Explorer API Keys
# ============================================
# Etherscan API Key (for contract verification)
# Get free key at: https://etherscan.io/apis
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Basescan API Key (optional, for Base verification)
BASESCAN_API_KEY=your_basescan_api_key_here

# ============================================
# Coinbase CDP Configuration (Phase II)
# ============================================
# Coinbase CDP API Key (get from: https://portal.cdp.coinbase.com/)
CDP_API_KEY_NAME=your_cdp_api_key_name
CDP_API_KEY_PRIVATE_KEY=your_cdp_private_key

# AI Agent Wallet Address (will be generated in Phase II)
AGENT_WALLET_ADDRESS=

# ============================================
# EVVM MATE Metaprotocol Configuration
# ============================================
# MATE Metaprotocol Contract Address (Sepolia)
EVVM_ADDRESS=0xF817e9ad82B4a19F00dA7A248D9e556Ba96e6366

# MATE Staking Contract (Sepolia)
MATE_STAKING_ADDRESS=0x8eB2525239781e06dBDbd95d83c957C431CF2321

# MATE NameService Contract (Sepolia)
MATE_NAMESERVICE_ADDRESS=0x8038e87dc67D87b31d890FD01E855a8517ebfD24

# EVVM ID for MATE Metaprotocol
EVVM_ID=2

# ============================================
# Pyth Network Configuration
# ============================================
